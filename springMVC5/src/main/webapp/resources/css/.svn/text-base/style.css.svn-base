	background-color:rgba(255,255,255,0.6);
	padding:10px;
	width:400px;
	margin:0 auto;
	text-align:center;
	margin-top:200px;
	 -moz-border-radius: 4px; /* Firefox */  
 -webkit-border-radius: 4px; /* Safari, Chrome */  
 border-radius: 4px; /* CSS3 */  
 box-shadow: 0 1px 5px rgba(0,0,0,0.65);
}

