input.macrocategory {
-ms-transform: scale(1.3);
-moz-transform: scale(1.3);
-webkit-transform: scale(1.3);
-o-transform: scale(1.3);
padding: 10px;
}

input.subcategory {
-ms-transform: scale(0.9);
-moz-transform: scale(0.9);
-webkit-transform: scale(0.9);
-o-transform: scale(0.9);
padding: 10px;
}

.toggle-subcategory{
	font-size:12px;
	background-color: #DDD;
	color:#444;
	padding:1px;
	font-weight:bold;
	padding-top: 0;
	padding-bottom: 0;
}

.subcategory-content{
	border:1px solid #CCC;
	padding:5px;
	max-height:60px;
	overflow: auto;
	display:none;
	background-color: #F7F7F7;
}

.info {
			padding: 6px 8px;
			font: 14px/16px Arial, Helvetica, sans-serif;
			background: white;
			background: rgba(255,255,255,0.8);
			box-shadow: 0 0 15px rgba(0,0,0,0.2);
			border-radius: 5px;
		}
		.info h4 {
			margin: 0 0 5px;
			color: #777;
		}

		.legend {
			text-align: left;
			line-height: 18px;
			color: #555;
		}
		.legend i {
			width: 18px;
			height: 18px;
			float: left;
			margin-right: 8px;
			opacity: 0.7;
		}
		
		.macrocategory-label{
		font-weight: bold;
		}
		
